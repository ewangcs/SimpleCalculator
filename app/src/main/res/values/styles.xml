<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DigitButton" parent="android:Widget.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">digitButtonClick</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">32sp</item>
        <item name="android:padding">4sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="OperationButton" parent="android:Widget.Button">
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">operationButtonClick</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">32sp</item>
        <item name="android:padding">4sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
